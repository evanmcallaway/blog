
<table>
  <div class="row">
    <div class="col s12 m6">
      <% @articles.each do |article| %>
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
          <span class="card-title"><%= link_to article.title, article_path(article) %></span>
          <p><%= article.body %></p>
          <div>
            <%= article.tags.map { |tag| link_to tag.name, '/?tag=' + tag.name }.join(', ').html_safe %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</table>
<% @tag.each do |tag| %>
  <div>
    <%= link_to tag.name, '/?tag=' + tag.name %>
  </div>
<% end %>